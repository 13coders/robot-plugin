<idea-plugin version="2">
    <id>amailp.intellij.robot</id>
    <name>Robot Framework Support</name>
    <version>@SNAPSHOT@</version>
    <vendor email="amailp@gmail.com">Valerio Angelini</vendor>

    <description><![CDATA[
      Basic support for Robot Framework
      <ul>
        <li>Syntax highlighting</li>
        <li>Code autocompletion</li>
        <li>Jump to source</li>
      </ul>

      ]]></description>

    <change-notes><![CDATA[
      0.6
      <ul>
        <li>Robot File templates added</li>
        <li>Support added for JetBrains products other than IntelliJ</li>
      </ul>
      ]]>
    </change-notes>

    <!-- http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges -->
    <idea-version since-build="123.72"/>

    <!-- http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products -->
    <depends>com.intellij.modules.lang</depends>

    <application-components/>

    <project-components/>

    <actions>
        <action id="Robot.NewFile" class="amailp.intellij.robot.actions.NewRobotFileAction" text="Robot File" description="Create a new Robot file">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="Robotframework" implementationClass="amailp.intellij.robot.idea.RobotAnnotator"/>
        <lang.syntaxHighlighterFactory key="Robotframework" implementationClass="amailp.intellij.robot.idea.RobotHighlighterFactory"/>
        <lang.parserDefinition language="Robotframework" implementationClass="amailp.intellij.robot.idea.RobotParserDefinition"/>
        <fileTypeFactory implementation="amailp.intellij.robot.idea.RobotFileTypeFactory" />

        <lang.elementManipulator forClass="amailp.intellij.robot.psi.Keyword" implementationClass="amailp.intellij.robot.psi.KeywordManipulator"/>
        <lang.elementManipulator forClass="amailp.intellij.robot.psi.ResourceValue" implementationClass="amailp.intellij.robot.psi.ResourceValueManipulator"/>
        <internalFileTemplate name="Robot Test Suite"/>
        <internalFileTemplate name="Robot Keywords"/>
    </extensions>
</idea-plugin>